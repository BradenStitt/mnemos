{
  "manifest_version": 3,
  "name": "Mnemos",
  "version": "0.0.1",
  "description": "ðŸ§  Mnemos keeps your conversations in sync. ðŸ”„ No more repeating yourselfâ€”just seamless AI collaboration! âœ¨",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://api.mem0.ai/*", "https://app.mem0.ai/*", "http://localhost:8000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["chatgpt/content.js"]
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": ["claude/content.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["sidebar.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}